<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="IVCNetMaui.Controls.MenuCardControl"
             x:Name="this">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid x:Name="Card"
          BindingContext="{x:Reference this}"
          Padding="16, 12"
          ColumnDefinitions="Auto, *, Auto, Auto"
          ColumnSpacing="12">
        <Grid.Behaviors>
            <toolkit:TouchBehavior 
                PressedBackgroundColor="{StaticResource Gray300}"
                DefaultBackgroundColor="Transparent"/>
        </Grid.Behaviors>
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command}"/>
        </Grid.GestureRecognizers>
        <Border Grid.Column="0"
            WidthRequest="32"
            HeightRequest="32"
            StrokeThickness="0"
            BackgroundColor="{StaticResource Gray950}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="3,3,3,3" />
            </Border.StrokeShape>
            <Image Source="{Binding Icon}" WidthRequest="20"/>
        </Border>
        <Label Grid.Column="1"
           Text="{Binding Title}" />
        <Label Grid.Column="2"
               Text="{Binding Count, FallbackValue=''}"/>
        <Image Grid.Column="3"
           Source="right_arrow.png" 
           WidthRequest="20"/>
    </Grid>
</ContentView>
