<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             x:Class="IVCNetMaui.Controls.MenuCardControl"
             x:Name="This"
             x:DataType="controls:MenuCardControl">
    <VerticalStackLayout BindingContext="{x:Reference This}" Spacing="8">
        <Label Text="{Binding Title}" Style="{StaticResource Title-M}" TextColor="{StaticResource Gray950}"/>
        <Border StrokeThickness="1.5" BackgroundColor="White">
            <Border.Shadow>
                <Shadow Brush="#55000000"
                        Offset="0,4"
                        Radius="12"
                        Opacity="0.3" />
            </Border.Shadow>
                
            <Border.Behaviors>
                <toolkit:TouchBehavior 
                    PressedBackgroundColor="{StaticResource Gray100}"
                    PressedScale="0.99"/>
            </Border.Behaviors>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Command}"/>
            </Border.GestureRecognizers>
            <ContentView ControlTemplate="{Binding BodyContent}"/>
        </Border>
    </VerticalStackLayout>
</ContentView>
