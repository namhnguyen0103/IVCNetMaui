<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:IVCNetMaui.Views.Detail"
             x:Class="IVCNetMaui.Controls.UsageBarControl"
             x:Name="this">
    <VerticalStackLayout BindingContext="{x:Reference this}" Spacing="4">
        <Grid ColumnDefinitions="*, Auto">
            <Label Text="{Binding DiskName}" FontFamily="NunitoBold" FontSize="14"/>
            <Label Text="3.60 GB (53%) of 6.0 GB used"
                   Grid.Column="1"
                   FontSize="12"
                   TextColor="{StaticResource Gray800}"/>
        </Grid>
        <ProgressBar Progress="0.5"/>
    </VerticalStackLayout>
</ContentView>
