<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:progressBar="clr-namespace:Syncfusion.Maui.Toolkit.ProgressBar;assembly=Syncfusion.Maui.Toolkit"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             x:Class="IVCNetMaui.Controls.UsageBarControl"
             x:Name="This"
             x:DataType="controls:UsageBarControl">
    <VerticalStackLayout BindingContext="{x:Reference This}" Spacing="4">
        <Grid ColumnDefinitions="*, Auto">
            <Label Text="{Binding DiskName}" FontSize="14"/>
            <Label Text="3.0 GB free of 6.0 GB"
                   Grid.Column="1"
                   FontSize="12"
                   TextColor="{StaticResource Gray700}"/>
        </Grid>
        <progressBar:SfLinearProgressBar AnimationDuration="0" Progress="50" TrackHeight="14" ProgressHeight="14" TrackCornerRadius="4" ProgressCornerRadius="4" TrackFill="{StaticResource BlueExtraLight}" ProgressFill="{StaticResource BluePrimary}"/>
    </VerticalStackLayout>
</ContentView>
