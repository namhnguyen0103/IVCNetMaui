<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls" 
             x:Class="IVCNetMaui.Controls.SystemDetailControl">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DetailPageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <VerticalStackLayout Spacing="16" Style="{StaticResource MainPadding}">
        <VerticalStackLayout Style="{StaticResource SectionStack}">
            <Label Text="Status" Style="{StaticResource SectionTitle}"/>
            <Border Style="{StaticResource PropertyBorder}">
                <Grid ColumnDefinitions="*, *"
                  RowDefinitions="Auto, Auto"
                  Style="{StaticResource PropertyGrid}">
                    <VerticalStackLayout>
                        <Label Text="Name:" Style="{StaticResource PropertyTertiaryText}"/>
                        <Label Text="WIN-JQGG2HC608K" Style="{StaticResource PropertyPrimaryText}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Started:" Style="{StaticResource PropertyTertiaryText}"/>
                        <Label Text="6/4/2025 2:38:46 PM" Style="{StaticResource PropertyPrimaryText}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Row="1">
                        <Label Text="OS:" Style="{StaticResource PropertyTertiaryText}"/>
                        <Label Text="Microsoft Windows NT 10.0.17763.0" Style="{StaticResource PropertyPrimaryText}"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" Grid.Row="1">
                        <Label Text="Uptime:" Style="{StaticResource PropertyTertiaryText}"/>
                        <Label Text="5 day 22 hr 51 min 56 sec" Style="{StaticResource PropertyPrimaryText}"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </VerticalStackLayout>
        <Grid ColumnDefinitions="*, *"
          ColumnSpacing="12">
            <VerticalStackLayout Style="{StaticResource SectionStack}">
                <Label Text="CPU" Style="{StaticResource SectionTitle}"/>
                <Border Style="{StaticResource PropertyBorder}">
                    <Grid ColumnDefinitions="*, *"
                      Style="{StaticResource PropertyGrid}">
                        <VerticalStackLayout>
                            <Label Text="Total:" Style="{StaticResource PropertyTertiaryText}"/>
                            <Label Text="2" Style="{StaticResource PropertyPrimaryText}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Used:" Style="{StaticResource PropertyTertiaryText}"/>
                            <Label Text="4.2%" Style="{StaticResource PropertyPrimaryText}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1" Style="{StaticResource SectionStack}">
                <Label Text="GPU" Style="{StaticResource SectionTitle}"/>
                <Border Style="{StaticResource PropertyBorder}">
                    <Grid ColumnDefinitions="*, *"
                      Style="{StaticResource PropertyGrid}">
                        <VerticalStackLayout>
                            <Label Text="Total:" Style="{StaticResource PropertyTertiaryText}"/>
                            <Label Text="2" Style="{StaticResource PropertyPrimaryText}"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Used:" Style="{StaticResource PropertyTertiaryText}"/>
                            <Label Text="4.2%" Style="{StaticResource PropertyPrimaryText}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </Grid>
        <VerticalStackLayout Style="{StaticResource SectionStack}">
            <Label Text="RAM" Style="{StaticResource SectionTitle}"/>
            <Border Style="{StaticResource PropertyBorder}">
                <VerticalStackLayout Spacing="12">
                    <controls:UsageBarControl DiskName="Physical"
                          DiskCapacity="6.0"
                          DiskUsage="3.6"/>
                    <controls:UsageBarControl DiskName="Virtual"
                          DiskCapacity="6.0"
                          DiskUsage="3.6"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
        <VerticalStackLayout Style="{StaticResource SectionStack}">
            <Label Text="Disks" Style="{StaticResource SectionTitle}"/>
            <Border Style="{StaticResource PropertyBorder}">
                <VerticalStackLayout>
                    <controls:UsageBarControl DiskName="C:"
                          DiskCapacity="6.0"
                          DiskUsage="3.6"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Network" Style="{StaticResource SectionTitle}"/>
            <Border Style="{StaticResource PropertyBorder}">
                <Grid>
                    <material:DataGrid ItemsSource="{Binding Networks}">
                        <material:DataGrid.TitleTemplate>
                            <DataTemplate x:DataType="material:DataGridColumn">
                                <Label Text="{Binding Title}" Style="{StaticResource PropertyPrimaryText}"/>
                            </DataTemplate>
                        </material:DataGrid.TitleTemplate>

                        <material:DataGrid.CellItemTemplate>
                            <DataTemplate x:DataType="material:DataGrid">
                                <Label Text="{material:DataGridValueBinding}" Style="{StaticResource PropertySecondaryText}"/>
                            </DataTemplate>
                        </material:DataGrid.CellItemTemplate>
                        <material:DataGrid.Columns>
                            <material:DataGridColumn ValueBinding="{Binding Name}" Title="Name" Width="*"/>
                            <material:DataGridColumn ValueBinding="{Binding NIT}" Title="NIT" Width="40"/>
                            <material:DataGridColumn ValueBinding="{Binding Send}" Title="Send" Width="*"/>
                            <material:DataGridColumn ValueBinding="{Binding Receive}" Title="Receive" Width="*"/>
                            <material:DataGridColumn ValueBinding="{Binding PktQd}" Title="PktQd" Width="40"/>
                        </material:DataGrid.Columns>
                    </material:DataGrid>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentView>
