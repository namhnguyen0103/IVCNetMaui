<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVCNetMaui.Controls.CameraControl"
             x:Name="this">
    <Grid Grid.Row="1" RowDefinitions="Auto, *" BindingContext="{x:Reference this}">
        <Grid ColumnDefinitions="Auto, Auto, *, Auto"
                  ColumnSpacing="12"
                  Padding="12, 0"
                  BackgroundColor="{StaticResource Gray500}"
                  HeightRequest="25">
            <Picker Grid.Column="0" 
                        BackgroundColor="{StaticResource Gray200}"
                        ></Picker>
            <Picker Grid.Column="1" 
                    BackgroundColor="{StaticResource Gray200}"></Picker>
            <Label Grid.Column="3" 
                   Text="X" 
                   VerticalTextAlignment="Center"
                   TextColor="Red"
                   WidthRequest="20">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding DeleteCommand}"
                                          CommandParameter="{Binding}"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>
        <Border Grid.Row="1" 
                Background="{StaticResource Gray200}" 
                StrokeThickness="0">
            <Label Text="{Binding Title}" 
                   VerticalTextAlignment="Center" 
                   HorizontalTextAlignment="Center"/>
        </Border>
    </Grid>
</ContentView>
