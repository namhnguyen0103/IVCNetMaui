<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVCNetMaui.Resources.Styles.MenuPageStyles">
    <Style x:Key="MenuBorder" TargetType="Border">
        <Setter Property="Padding" Value="16"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="{StaticResource Gray400}"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="10"/>
        </Setter>
    </Style>
    <Style x:Key="MenuContentPage" TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}"/>
    </Style>
    <Style x:Key="MainPadding" TargetType="{x:Type Layout}">
        <Setter Property="Padding" Value="12, 10, 12, 100"/>
    </Style>
    <Style x:Key="SectionTitle" TargetType="Label" >
        <Setter Property="FontFamily" Value="RobotoSemiBold"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>
    <Style x:Key="SectionHeader" TargetType="HorizontalStackLayout">
        <Setter Property="Spacing" Value="10"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>
    <Style x:Key="SectionGrid" TargetType="Grid">
        <Setter Property="RowSpacing" Value="8"/>
    </Style>
    <Style x:Key="TwoColumnCollectionView" TargetType="CollectionView">
        <Setter Property="ItemsLayout">
            <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 VerticalItemSpacing="8"
                                 HorizontalItemSpacing="8"/>
        </Setter>
    </Style>
    <Style TargetType="Border">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="StrokeShape" Value="0" />
    </Style>
</ResourceDictionary>