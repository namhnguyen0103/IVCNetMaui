<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVCNetMaui.Resources.Styles.DetailStyles">
    <Style TargetType="Border">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="3"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SectionTitle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Gray800}"/>
        <Setter Property="FontFamily" Value="NunitoMedium" />
    </Style>
    <Style x:Key="PropertyTitle" TargetType="Label">
        <Setter Property="FontFamily" Value="NunitoMedium"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="{StaticResource Gray600}" />
    </Style>
    <Style x:Key="PropertyValue" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="LineBreakMode" Value="WordWrap" />
        <Setter Property="FontFamily" Value="NunitoBold"/>
    </Style>
    <Style x:Key="PropertyGrid" TargetType="Grid">
        <Setter Property="ColumnSpacing" Value="16"/>
        <Setter Property="RowSpacing" Value="16"/>
    </Style>
    <Style x:Key="SectionStack" TargetType="VerticalStackLayout">
        <Setter Property="Spacing" Value="4" />
    </Style>
</ResourceDictionary>