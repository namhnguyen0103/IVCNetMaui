<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IVCNetMaui.Resources.Styles.Typescale">
    
    <Style x:Key="Display-L" TargetType="Label">
        <Setter Property="FontSize" Value="64"/>
    </Style>

    <Style x:Key="Display-M" TargetType="Label">
        <Setter Property="FontSize" Value="48"/>
    </Style>

    <Style x:Key="Display-S" TargetType="Label">
        <Setter Property="FontSize" Value="40"/>
    </Style>

    <Style x:Key="Headline-L" TargetType="Label">
        <Setter Property="FontSize" Value="32"/>
    </Style>

    <Style x:Key="Headline-M" TargetType="Label">
        <Setter Property="FontSize" Value="28"/>
    </Style>

    <Style x:Key="Headline-S" TargetType="Label">
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style x:Key="Title-L" TargetType="Label">
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="Title-M" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="RobotoMedium"/>
    </Style>

    <Style x:Key="Title-S" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="RobotoMedium"/>
    </Style>

    <Style x:Key="Body-L" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="Body-M" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="Body-S" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="Label-L" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="RobotoMedium"/>
    </Style>

    <Style x:Key="Label-M" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="RobotoMedium"/>
    </Style>

    <Style x:Key="Label-S" TargetType="Label">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontFamily" Value="RobotoMedium"/>
    </Style>
</ResourceDictionary>