<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IVCNetMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:local="clr-namespace:IVCNetMaui"
    x:DataType="local:AppShell"
    x:Name="shell"
    Title="IVCNetMaui"
    FlyoutBackdrop="#80808080">

    <MenuItem Text="Logout" Clicked="LogoutMenuItem_Clicked">
        <MenuItem.IconImageSource>
            <FontImageSource FontFamily="MaterialSharp" Glyph="{x:Static m:MaterialSharp.Logout}" Color="{StaticResource Gray700}"/>
        </MenuItem.IconImageSource>
    </MenuItem>
</Shell>
