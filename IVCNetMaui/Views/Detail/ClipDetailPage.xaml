<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.Detail"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
             x:Class="IVCNetMaui.Views.Detail.ClipDetailPage"
             x:DataType="viewModels:ClipDetailViewModel"
             BackgroundColor="{StaticResource Blue100}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Download">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="MaterialSharp" Glyph="{x:Static m:MaterialSharp.Download}"  />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <Grid RowDefinitions="Auto, 200, Auto, 200, Auto, 200" RowSpacing="12">
            <Label Text="DCam1-Mjpeg-640x512.avi"></Label>
            <toolkit:MediaElement Grid.Row="1" Source="filesystem://DCam1-Mjpeg-640x512.avi"></toolkit:MediaElement>
            <Label Grid.Row="2" Text="UNV-H265-1280x720.mp4"></Label>
            <toolkit:MediaElement Grid.Row="3" Source="filesystem://UNV-H265-1280x720.mp4"></toolkit:MediaElement>
            <Label Grid.Row="4" Text="YCX-H264-640x360.mp4"></Label>
            <toolkit:MediaElement Grid.Row="5" Source="filesystem://YCX-H264-640x360.mp4"></toolkit:MediaElement>
        </Grid>
    </ScrollView>
</ContentPage>