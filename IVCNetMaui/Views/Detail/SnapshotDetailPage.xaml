<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.Detail"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
             x:Class="IVCNetMaui.Views.Detail.SnapshotDetailPage"
             x:DataType="viewModels:SnapshotDetailViewModel"
             BackgroundColor="{StaticResource Blue100}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Download">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="{x:Static m:MaterialSharp.Download}"  />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <Grid>
            <StackLayout BindableLayout.ItemsSource="{Binding ImageSources}" Spacing="12">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="ImageSource">
                        <Image Source="{Binding}"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
            <ActivityIndicator IsRunning="{Binding IsBusy}"></ActivityIndicator>
        </Grid>
    </ScrollView>

</ContentPage>