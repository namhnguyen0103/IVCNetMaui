<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IVCNetMaui"
             xmlns:viewModel="clr-namespace:IVCNetMaui.ViewModels"
             x:Class="IVCNetMaui.Views.LoginPage"
             
             Title="NewPage1">
    <ContentPage.BindingContext>
        <viewModel:LoginViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout VerticalOptions="Center">
        <Label Text="Sign In" 
               HorizontalOptions="Center" />
        <Label Text="Enter your user name and password to access the iVAH application"
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"/>
        <Label Text="[Logo Goes Here]"
               HorizontalOptions="Center"/>
        <Label Text="Username" />
        <Entry Placeholder="Enter your user name" />
        <Label Text="Password"/>
        <Entry Placeholder="Enter your password"
               IsPassword="True"/>
        <Button Text="Log In"
                Command="{Binding Login}"/>
    </VerticalStackLayout>
</ContentPage>