<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IVCNetMaui"
             xmlns:viewModel="clr-namespace:IVCNetMaui.ViewModels"
             x:Class="IVCNetMaui.Views.LoginPage"
             x:DataType="viewModel:LoginViewModel"
             Title="Login"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout VerticalOptions="Start"
                         Padding="24, 80">
        <Image Source="ivc_logo.png"
               WidthRequest="168"
               Margin="0, 0, 0, 32"/>
        <!--Add Longwatch i3 (VAH)-->
        <Label Text="Longwatch i3"
               Style="{StaticResource Display-L}"/>
        <Label Text="Log into your account"
               HorizontalOptions="Center" 
               FontFamily="NunitoBold"
               FontSize="16"
               Margin="0, 0, 0, 24"/>
        <Entry Placeholder="Enter your username"
               Margin="0, 0, 0, 16" 
               Text="{Binding Username, Mode=TwoWay}"/>
        <Entry Placeholder="Enter your password"
               IsPassword="True"
               Margin="0, 0, 0, 32"
               Text="{Binding Password, Mode=TwoWay}"/>
        <Button Text="Log in"
                Command="{Binding LoginCommand}"/>
    </VerticalStackLayout>
</ContentPage>