<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.Historical"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             x:Class="IVCNetMaui.Views.Historical.HealthDataPage"
             Title="HealthDataPage">
    <ContentPage.BindingContext>
        <viewModels:HealthDataViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label Text="Hub Health"/>
        <controls:AccordionControl Header="System Health">
            <VerticalStackLayout>
                <Label Text="Edge 1"/>
                <Label Text="Edge 2"/>
                <Label Text="Edge 3"/>
            </VerticalStackLayout>
        </controls:AccordionControl>
        <controls:AccordionControl Header="Process Health">
            <VerticalStackLayout>
                <Label Text="Edge 1"/>
                <Label Text="Edge 2"/>
                <Label Text="Edge 3"/>
            </VerticalStackLayout>
        </controls:AccordionControl>

    </VerticalStackLayout>
</ContentPage>