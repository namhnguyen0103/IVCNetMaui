<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.Dashboard"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             x:Class="IVCNetMaui.Views.Dashboard.EdgeUnitPage"
             x:DataType="viewModels:EdgeUnitViewModel"
             Title="Unit"
             Style="{StaticResource MenuContentPage}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="Footer" 
                   TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Templates/MenuPageLayout.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout Style="{StaticResource MainPadding}">
        <CollectionView ItemsSource="{Binding List}"
                        Style="{StaticResource TwoColumnCollectionView}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <controls:UnitCardControl/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>