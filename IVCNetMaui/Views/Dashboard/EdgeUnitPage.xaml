<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.Dashboard"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             x:Class="IVCNetMaui.Views.Dashboard.EdgeUnitPage"
             Title="Edge / Unit">
    <ContentPage.BindingContext>
        <viewModels:EdgeUnitViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding List}"
                        ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid RowDefinitions="Auto, Auto, Auto"
                          RowSpacing="8"
                          Padding="14, 12">
                        <HorizontalStackLayout Grid.Row="0"
                                               Spacing="8">
                            <Border>
                                <Label Text="#ID"/>
                            </Border>
                            <Label Text="UNITNAME"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Grid.Row="1"
                                               Spacing="8">
                            <controls:StatusIconControl Status="Activated"
                                                        StatusColor="{StaticResource BluePrimary}"/>
                            <Label Text="UI Process" />
                            <Label Text="Video Process" />
                        </HorizontalStackLayout>
                        <Label Grid.Row="2" 
                               Text="{Binding}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>