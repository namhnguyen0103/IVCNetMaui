<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.View"
             x:Class="IVCNetMaui.Views.View.EventPage"
             x:Name="this"
             Title="EventPage">
    <ContentPage.BindingContext>
        <viewModels:EventViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding List}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <controls:EventCardControl Command="{Binding BindingContext.GoToEventDetailCommand, Source={x:Reference this}}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>