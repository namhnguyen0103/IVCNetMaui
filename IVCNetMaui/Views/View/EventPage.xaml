<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.View"
             x:Class="IVCNetMaui.Views.View.EventPage"
             x:DataType="viewModels:EventViewModel"
             Title="Event View">
    <Grid RowDefinitions="*">
        <CollectionView ItemsSource="{Binding List}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <controls:EventCardControl Command="{Binding x:DataType='viewModels:EventViewModel', Source={RelativeSource AncestorType={x:Type viewModels:EventViewModel}}, Path=NavigateToEventDetailCommand}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
    </Grid>
</ContentPage>