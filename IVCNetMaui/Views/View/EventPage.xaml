<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:IVCNetMaui.Converters"
             xmlns:controls="clr-namespace:IVCNetMaui.Controls"
             xmlns:viewModels="clr-namespace:IVCNetMaui.ViewModels.View"
             x:Class="IVCNetMaui.Views.View.EventPage"
             x:DataType="viewModels:EventViewModel"
             Title="Event View">
    <ContentPage.Resources>
        <converters:DummyConverter x:Key="DummyConverter"/>
    </ContentPage.Resources>
    <Grid RowDefinitions="*">
        <CollectionView ItemsSource="{Binding List}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <controls:EventCardControl>
                        <controls:EventCardControl.Command>
                            <Binding x:DataType="CollectionView" 
                                     Source="{RelativeSource AncestorType={x:Type CollectionView}}"
                                     Path="BindingContext.NavigateToEventDetailCommand"/>
                        </controls:EventCardControl.Command>
                    </controls:EventCardControl>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ActivityIndicator IsRunning="{Binding IsBusy}"/>
    </Grid>
</ContentPage>